<div class='center'>
<h1 class="text-center">Explore Other People's Bucket Lists</h1>

<hr />
<div class='row'>
	<form class="col s4 offset-s4" role="search">
	    <div class="form-group">
	      <%= text_field_tag :search, params[:search] %>
	    </div>
	  <div class='center-align'>
	  	<%= submit_tag "Search", :title => nil, class:'btn' %>
	  </div>
	</form>
</div>

<% if @buckets.any? %>
  <div class="row">
		<% @buckets.each do |bucket| %>
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
       		<%= link_to (image_tag bucket.image.url(:medium)), bucket_path(bucket) %> 
          
          <span class="card-title"><%= bucket.title %></span>
        </div>
        <div class="card-content">
          <p><%= bucket.description %></p>
        </div>
        <div class="card-action">
          <%= link_to 'More Info', bucket_path(bucket) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
<% else %>
	<h3 class='center'>No Bucket list has been added!</h3>
<% end %>

<%= will_paginate @buckets, class:'paginate' %>
</div>