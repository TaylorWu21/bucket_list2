<div class="container-fluid center">

	<h1><%= @list.title%></h1>

	<div class="text-center">
		<%= image_tag @list.image.url(:large) %>
	</div>

	<h4><span><%= @list.description %></span></h4> <br/>

	<p><span>Completed:</span></p>
	<p><span><%= @list.completed %> </span> <br/></p>


	<% if @bucket.user_id == current_user.id %>
		<%= link_to "Edit list", edit_bucket_list_path(@bucket, @list),class:'btn orange' %> 
		<%= link_to "Delete", bucket_list_path(@bucket, @list) ,method: :delete, data: {confirm: 'Really delete?'}  ,class:'btn red' %> 
	<% end %> 
	<%= link_to "Back", bucket_lists_path(@bucket),class:'btn' %> 
</div>